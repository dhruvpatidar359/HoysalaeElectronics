<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConfirmOrder">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/otp_verification"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/otp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:textSize="18sp"
        android:id="@+id/text1"
        android:layout_below="@id/otp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the verification code sent to"
        android:textSize="15sp"
        android:id="@+id/text2"
        android:layout_below="@id/text1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9857486943"
        android:layout_below="@id/text2"
        android:textSize="15sp"
        android:id="@+id/text3"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/text3"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/layoutL"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_marginRight="10dp"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="20sp"
            android:id="@+id/otp1"
            android:background="@drawable/otp_background"/>
        <EditText
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_marginRight="10dp"
            android:maxLength="1"
            android:id="@+id/otp2"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="20sp"
            android:background="@drawable/otp_background"/>
        <EditText
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:id="@+id/otp3"
            android:layout_marginRight="10dp"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="20sp"
            android:background="@drawable/otp_background"/>
        <EditText
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:maxLength="1"
            android:id="@+id/otp4"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="20sp"
            android:background="@drawable/otp_background"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't receive the verification OTP?"
        android:textSize="15sp"
        android:layout_below="@id/layoutL"
        android:layout_marginTop="20dp"
        android:id="@+id/text_v"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend"
        android:textSize="18sp"
        android:layout_below="@id/text_v"
        android:layout_marginTop="5dp"
        android:textColor="@color/purple_700"
        android:id="@+id/resend_otp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:text="Submit"
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:id="@+id/submit"/>
</RelativeLayout>