<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    app:cardElevation="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:src="@drawable/led_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/cart_image"
        android:layout_marginBottom="5dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Light emitting diode"
          android:layout_toEndOf="@id/cart_image"
          android:layout_marginTop="50dp"
          android:layout_marginLeft="30dp"
          android:textSize="15sp"
          android:id="@+id/cart_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 30.0"
        android:layout_toEndOf="@id/cart_image"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/cart_name"
        android:textSize="15sp"
        android:id="@+id/cart_price"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qty"
        android:layout_toEndOf="@id/cart_image"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/cart_price"
        android:textSize="15sp"
        android:id="@+id/cart_quantity"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="5dp"
            android:layout_below="@id/cart_price"
            android:layout_toEndOf="@id/cart_quantity">

           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/plus_button"
               android:id="@+id/plus_button"
               android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/quantity"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginRight="10dp"/>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/minus_image"
                android:layout_marginRight="10dp"
                android:id="@+id/minus_button"/>

        </LinearLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/delete_image"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/deleteImage"
        android:layout_alignParentRight="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
