<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SplashActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash_logo">
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/splash"
        android:id="@+id/items_image"
        android:layout_marginTop="60dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/purple_700"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HE"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:textSize="70sp"
        android:id="@+id/text1"
        android:layout_marginLeft="90dp"
        android:layout_below="@id/items_image"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/items_image"
        android:textStyle="italic"
        android:layout_marginLeft="5dp"
        android:textSize="22sp"
        android:textColor="@color/purple_700"
        android:layout_toRightOf="@id/text1"
        android:layout_marginTop="50dp"
        android:text="Hoysala"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text1"
        android:layout_marginTop="75dp"
        android:textStyle="italic"
        android:layout_marginLeft="5dp"
        android:textSize="22sp"
        android:textColor="@color/purple_700"
        android:layout_below="@id/items_image"
        android:text="Electronics"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/internet_layout"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/wi_fi_image"
            android:src="@drawable/no_interntet"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Connection"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please check your internet connectivity"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="and try again"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:layout_marginTop="10dp"
            android:id="@+id/retry_button"/>
    </LinearLayout>

</RelativeLayout>