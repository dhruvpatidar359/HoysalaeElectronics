<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    tools:context=".Fragments.Transaction">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative2"
        android:background="@color/background_default">

        <androidx.appcompat.widget.SearchView
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@drawable/search_bar"
            android:layout_centerHorizontal="true"
            android:focusable="false"
            app:iconifiedByDefault="false"
            android:id="@+id/search_bar"
            app:closeIcon="@drawable/ic_action_clear"
            app:searchIcon="@drawable/ic_action_search"
            app:queryHint="What are you looking for"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:id="@+id/card_view1"
        android:layout_below="@id/relative2">
        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:showNavigationButtons="false"
            app:showCaption="false"
            app:autoPlay="true"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featured Products"
        android:textSize="20sp"
        android:id="@+id/featured_product"
        android:textColor="@color/black"
        android:layout_below="@id/card_view1"
        android:layout_margin="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyler"
        android:layout_below="@id/featured_product"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Products"
            android:textSize="20sp"
            android:id="@+id/our_products"
            android:textColor="@color/black"
            android:layout_below="@id/recyler"
            android:layout_margin="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler2"
            android:background="@color/background_default"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@id/our_products"/>
    </RelativeLayout>
</ScrollView>